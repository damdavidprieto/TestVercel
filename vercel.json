{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "private/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "public/login.html" },
    { "src": "/home", "dest": "private/home.html" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
