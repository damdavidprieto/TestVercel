{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
	{
      "src": "private/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "public/login.html"
    },
    {
      "src": "/home",
      "dest": "private/home.html"
    },
    {
      "src": "/app",
      "dest": "/api/app.js"
    }
  ]
}
