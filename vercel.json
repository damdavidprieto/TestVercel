{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "private/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "public/login.html" },
    { "src": "/home", "dest": "api/protected-page.js" }, 
    { "src": "/api/set-token", "dest": "api/set-token.js" },

    { "src": "/js/(.*)", "dest": "public/js/$1" },
    { "src": "/private/js/(.*)", "dest": "private/js/$1" },

    { "src": "/css/(.*)", "dest": "public/css/$1" }
  ]
}
